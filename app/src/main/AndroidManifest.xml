<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.michail.messengerclient">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name=".MessengerApplication">
        <activity
            android:name=".LoginPhoneActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".CountryListActivity"
            android:label="CountryList"
            android:parentActivityName=".LoginPhoneActivity"/>

        <activity
            android:name=".ActivationCodeActivity"
            android:label="ActivationCode"
            android:parentActivityName=".LoginPhoneActivity"/>
    </application>
</manifest>
